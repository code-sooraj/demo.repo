FROM mattsch/fedora-rpmfusion:22

VOLUME /tmp

# Update the image with the latest packages (recommended)
RUN dnf install -yq tar p7zip p7zip-plugins httpd 

ADD /maven/staticondocker.rar staticcontent.rar

RUN mkdir -p /usr/local/apache2/htdocs/staticondocker
RUN 7z x /staticcontent.rar /usr/local/apache2/htdocs/staticondocker

EXPOSE 9000

ENTRYPOINT [ "/usr/sbin/httpd" ]
CMD [ "-D", "FOREGROUND" ]
